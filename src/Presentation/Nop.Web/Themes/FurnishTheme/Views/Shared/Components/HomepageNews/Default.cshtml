@model HomepageNewsItemsModel
@using Nop.Core.Domain.News

@if (Model.NewsItems.Count > 0)
{
    <div class="news-list-homepage">
        <div class="title">
            <strong>@T("News")</strong>
        </div>
        <div class="news-items">
            <div class="news-section-slider section-slider">
                @foreach (var item in Model.NewsItems)
                {
                    <div class="slide-section">
                        <div class="news-item">
                            <div class="news-item">
                                <div class="overlay"></div>
                                <div class="news-head">
                                    <a class="news-title" href="@(Url.RouteUrl<NewsItem>(new { SeName = item.SeName }))">@item.Title</a>
                                </div>
                                <div class="news-body">
                                    @Html.Raw(item.Short)
                                </div>
                                <span class="news-date">-@item.CreatedOn.ToString("D")</span>
                                <div class="buttons">
                                    <a href="@(Url.RouteUrl<NewsItem>(new { SeName = item.SeName }))" class="button-2 btn btn-primary read-more">@T("News.MoreInfo")<i class="fas fa-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="view-all">
            <a href="@Url.RouteUrl("NewsArchive")">@T("News.ViewAll")</a>
        </div>
    </div>
}