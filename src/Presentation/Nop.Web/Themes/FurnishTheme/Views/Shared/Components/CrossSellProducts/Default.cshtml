@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="product-grid cross-sells">        
        <div class="title">
            <strong>@T("ShoppingCart.CrossSells")</strong>
        </div>
        <div class="item-grid">
            <div class="common-section-slider section-slider">
                @foreach (var product in Model)
                {
                    <div class="item-box slide-section">
                        @await Html.PartialAsync("_ProductBoxSlider", product)
                    </div>
                }
            </div>
        </div>
    </div>
}