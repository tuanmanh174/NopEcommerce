@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="related-products-grid product-grid">
        <div class="title">
            <strong>@T("Products.RelatedProducts")</strong>
        </div>
        <div class="item-grid">
            <div class="common-section-slider section-slider">
                @foreach (var item in Model)
                {
                    <div class="item-box slide-section">
                        @await Html.PartialAsync("_ProductBoxSlider", item)
                    </div>
                }
            </div>
        </div>
    </div>
}