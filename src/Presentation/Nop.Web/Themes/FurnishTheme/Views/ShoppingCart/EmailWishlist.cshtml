@model WishlistEmailAFriendModel

@{
    Layout = "_ColumnsOne";

    //title
    NopHtml.AddTitleParts(T("PageTitle.WishlistEmailAFriend").Text);
    //page class
    NopHtml.AppendPageCssClassParts("html-email-a-friend-page");
}

@*page title*@
@section Breadcrumb
{
    <div class="page-title">
        <div class="container">
            <div class="content">
                <h1>@T("Wishlist.EmailAFriend.Title")</h1>
            </div>
        </div>
    </div>
}

<div class="page email-a-friend-page">
    <div class="page-body">
        @if (Model.SuccessfullySent)
        {
            <div class="alert alert-success result">
                @Model.Result
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-12 col-sm-12 offset-md-2 col-md-8 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
                    <form asp-route="EmailWishlist" method="post">
                        <div asp-validation-summary="ModelOnly" class="message-error"></div>
                        <div class="fieldset">
                            <div class="form-fields">
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-form-label" asp-for="FriendEmail" asp-postfix=":"></label>
                                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                            <input asp-for="FriendEmail" class="friend-email form-control" placeholder="@T("Wishlist.EmailAFriend.FriendEmail.Hint")" />
                                            <span asp-validation-for="FriendEmail"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-form-label" asp-for="YourEmailAddress" asp-postfix=":"></label>
                                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                            <input asp-for="YourEmailAddress" class="your-email form-control" placeholder="@T("Wishlist.EmailAFriend.YourEmailAddress.Hint")" />
                                            <span asp-validation-for="YourEmailAddress"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-form-label" asp-for="PersonalMessage" asp-postfix=":"></label>
                                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                            <textarea asp-for="PersonalMessage" placeholder="@T("Wishlist.EmailAFriend.PersonalMessage.Hint")" class="personal-message form-control"></textarea>
                                            <span asp-validation-for="PersonalMessage"></span>
                                        </div>
                                    </div>
                                </div>
                                @if (Model.DisplayCaptcha)
                                {
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="captcha-box col-12 offset-lg-1">
                                                <nop-captcha />
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="buttons">
                            <button type="submit" name="send-email" class="button-1 btn btn-primary send-email-a-friend-button">@T("Wishlist.EmailAFriend.Button")</button>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
